<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".app.SignUpActivity"
    android:background="@drawable/card">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/signup_btn"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="@color/colorPrimary">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="false"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:text="@string/full_name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorBackgroundFloating"/>

                <EditText
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:hint="@string/full_name_sign"
                    android:inputType="textPersonName"
                    android:textColor="?attr/colorBackgroundFloating"
                    android:textColorLink="?attr/colorBackgroundFloating"
                    android:textColorHint="?attr/colorBackgroundFloating"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:text="@string/e_mail"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorBackgroundFloating"/>

                <EditText
                    android:id="@+id/email_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:hint="@string/e_mail_hint"
                    android:inputType="textEmailAddress"
                    android:textColor="?attr/colorBackgroundFloating"
                    android:textColorLink="?attr/colorBackgroundFloating"
                    android:textColorHint="?attr/colorBackgroundFloating"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:text="@string/password"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorBackgroundFloating"/>

                <EditText
                    android:id="@+id/create_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:textColor="?attr/colorBackgroundFloating"
                    android:textColorLink="?attr/colorBackgroundFloating"
                    android:textColorHint="?attr/colorBackgroundFloating"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:text="@string/confirm_password"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorBackgroundFloating"/>

                <EditText
                    android:id="@+id/confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:hint="@string/confirm_password_hint"
                    android:inputType="textPassword"
                    android:textColor="?attr/colorBackgroundFloating"
                    android:textColorLink="?attr/colorBackgroundFloating"
                    android:textColorHint="?attr/colorBackgroundFloating"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:text="@string/birthday"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorBackgroundFloating"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/birthday_month_sign_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Birth month"
                        android:inputType="date"
                        android:maxLength="2"
                        android:textColor="?attr/colorBackgroundFloating"
                        android:textColorLink="?attr/colorBackgroundFloating"
                        android:textColorHint="?attr/colorBackgroundFloating"/>

                    <EditText
                        android:id="@+id/birthday_year_sign_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Birth year"
                        android:inputType="date"
                        android:maxLength="4"
                        android:textColor="?attr/colorBackgroundFloating"
                        android:textColorLink="?attr/colorBackgroundFloating"
                        android:textColorHint="?attr/colorBackgroundFloating"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:text="@string/address"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorBackgroundFloating"/>

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:hint="@string/address_sign_up"
                    android:inputType="textPersonName"
                    android:textColor="?attr/colorBackgroundFloating"
                    android:textColorLink="?attr/colorBackgroundFloating"
                    android:textColorHint="?attr/colorBackgroundFloating"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:text="@string/home_phone"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorBackgroundFloating"/>

                <EditText
                    android:id="@+id/homePhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:hint="@string/home_phone_sign_up"
                    android:inputType="phone"
                    android:textColor="?attr/colorBackgroundFloating"
                    android:textColorLink="?attr/colorBackgroundFloating"
                    android:textColorHint="?attr/colorBackgroundFloating"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:text="@string/cell_phone"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorBackgroundFloating"/>

                <EditText
                    android:id="@+id/cellPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:hint="@string/cell_phone_sign_up"
                    android:inputType="phone"
                    android:textColor="?attr/colorBackgroundFloating"
                    android:textColorLink="?attr/colorBackgroundFloating"
                    android:textColorHint="?attr/colorBackgroundFloating"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:text="@string/grade"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorBackgroundFloating"/>

                <EditText
                    android:id="@+id/currentGrade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:hint="@string/grade_students_sign_up"
                    android:inputType="textPersonName"
                    android:textColor="?attr/colorBackgroundFloating"
                    android:textColorLink="?attr/colorBackgroundFloating"
                    android:textColorHint="?attr/colorBackgroundFloating"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:text="@string/teacher"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorBackgroundFloating" />

                <EditText
                    android:id="@+id/teacher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:hint="@string/teacher_students_sign_up"
                    android:inputType="textPersonName"
                    android:textColor="?attr/colorBackgroundFloating"
                    android:textColorLink="?attr/colorBackgroundFloating"
                    android:textColorHint="?attr/colorBackgroundFloating"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:text="@string/emergency_contact_info"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorBackgroundFloating" />

                <EditText
                    android:id="@+id/emergencyContactInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:hint="@string/emergency_contact_info_sign_up"
                    android:inputType="textPersonName"
                    android:textColor="?attr/colorBackgroundFloating"
                    android:textColorLink="?attr/colorBackgroundFloating"
                    android:textColorHint="?attr/colorBackgroundFloating"/>
            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/signup_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/signup_btn" />

</RelativeLayout>

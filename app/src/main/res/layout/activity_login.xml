<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.LoginActivity"
    android:background="@drawable/bllueindigoback">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="215dp"
        android:layout_height="138dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/indigodefault" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="209dp"
        android:layout_below="@+id/imageView"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="272dp"
            android:layout_height="match_parent"
            android:background="@drawable/small"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15dp">

            <EditText
                android:id="@+id/emailEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:ems="10"
                android:hint="@string/emailEdit"
                android:inputType="textEmailAddress"
                android:shadowColor="?attr/colorBackgroundFloating"
                android:textColor="?attr/colorBackgroundFloating"
                android:textColorHint="?attr/colorBackgroundFloating"
                android:textColorLink="?attr/colorBackgroundFloating" />

            <EditText
                android:id="@+id/passEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:ems="10"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textColor="?attr/colorBackgroundFloating"
                android:textColorHint="?attr/colorBackgroundFloating"
                android:textColorLink="?attr/colorBackgroundFloating" />

            <Button
                android:id="@+id/login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:text="@string/log_in" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>